<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#FCF9F2"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/giftNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="汝窑茶承" />

            <TextView
                android:id="@+id/giftDeadlineText"
                android:layout_toEndOf="@id/giftNameText"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="#10B22222"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textColor="#B22222"
                android:textSize="11sp"
                tools:text="截止日期: 2026-02-12" />
        </RelativeLayout>

        <TextView
            android:id="@+id/giftSpecText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#7F8C8D"
            android:textSize="13sp"
            tools:text="规格：直径30cm / 青瓷" />

        <TextView
            android:id="@+id/giftDescText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="5dp"
            android:textColor="#34495E"
            android:textSize="14sp"
            tools:text="雨过天青云破处。此茶承承袭宋代审美，釉面温润如玉..." />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imageCarouselRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="14dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_image"
            tools:orientation="horizontal" />

    </LinearLayout>
</androidx.cardview.widget.CardView>