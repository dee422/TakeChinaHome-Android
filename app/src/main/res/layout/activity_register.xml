<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EFE2"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="— 名 帖 登 记 —"
            android:textColor="#8B4513"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="请录入引荐信息，以开启礼序画卷"
            android:textColor="#4A4A4A"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etRegAccount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="雅号 (账号)"
                android:inputType="text"
                android:textColor="#2E2E2E"
                android:textSize="16sp" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D2B48C" />

            <EditText
                android:id="@+id/etRegPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:hint="密押 (密码)"
                android:inputType="textPassword"
                android:textColor="#2E2E2E"
                android:textSize="16sp" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D2B48C" />

            <EditText
                android:id="@+id/etRegEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:hint="鸿雁 (邮箱)"
                android:inputType="textEmailAddress"
                android:textColor="#2E2E2E"
                android:textSize="16sp" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D2B48C" />

            <EditText
                android:id="@+id/etRegInviteCode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:hint="引荐码 (若无，可邮件申请)"
                android:inputType="text"
                android:textColor="#2E2E2E"
                android:textSize="16sp" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D2B48C" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegisterSubmit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="48dp"
            android:text="确认登记"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:backgroundTint="#8B4513"
            app:cornerRadius="4dp" />

        <TextView
            android:id="@+id/tvApplyInviteCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="「无引荐码？由此申请」"
            android:textColor="#B22222"
            android:textSize="13sp" />

    </LinearLayout>
</ScrollView>